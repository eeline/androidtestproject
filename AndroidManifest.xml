<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:persistent="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.activities.DisplayMessageActivity"
            android:label="@string/display_message_activity_title"
            android:parentActivityName="com.example.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.testproject.MainActivity" />
        </activity>
        <activity
            android:name="com.example.activities.InternetActivity"
            android:label="@string/title_activity_internet"
            android:parentActivityName="com.example.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.testproject.MainActivity" />
        </activity>
        <activity
            android:name="com.example.activities.TweetListActivity"
            android:label="@string/title_tweet_list" >
        </activity>
        <activity
            android:name="com.example.activities.TweetDetailActivity"
            android:label="@string/title_tweet_detail"
            android:parentActivityName="com.example.activities.TweetListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TweetListActivity" />
        </activity>

        <service
            android:name="com.example.asynctasks.QueryTwitterService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name="com.example.receivers.TwitterQueryReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.example.receivers.TwitterQueryReceiver.QUERY_ACTION"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>